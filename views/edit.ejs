<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 class="header" style="">Edit Blog</h1>
        <div class="firstdiv">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                	<label>Title</label>
                    <input class="form-control" type="text" name="title" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                	<label>Image</label>
                    <input class="form-control" type="text" name="image" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                	<label>Blog Content</label>
                    <textarea class="form-control" rows="3" name="description" ><%= blog.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                    <a type="button" class="btn btn-md btn-primary" href="/blogs/<%= blog._id %>" >Cancel</a>
                </div>
            </form>
        </div>
   </div>
</div>

<% include ./partials/footer %>